				System.out.println("Trop petit");
			} else if ( userNumber > numberRandom ) {
	
				System.out.println("Trop grand");
			}
		}
		
		System.out.println("USER Final : " + userNumber);
		System.out.println("GUESS RANDOM: " + numberRandom);
		
	}

}
